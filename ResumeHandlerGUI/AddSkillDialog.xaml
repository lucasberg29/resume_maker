<Window x:Class="ResumeHandlerGUI.AddSkillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Skill"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="15">

        <TextBlock Text="Skill Type" Margin="0,0,0,4"/>
        <ComboBox x:Name="TypeComboBox"
                  Width="220"
                  SelectedIndex="0">
            <ComboBoxItem Content="Language"/>
            <ComboBoxItem Content="Framework"/>
            <ComboBoxItem Content="Tool"/>
        </ComboBox>

        <TextBlock Text="Skill Name" Margin="0,10,0,4"/>
        <TextBox x:Name="NameTextBox" Width="220"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Cancel"
                    Width="70"
                    Margin="0,0,5,0"
                    Click="Cancel_Click"/>

            <Button Content="Add"
                    Width="70"
                    IsDefault="True"
                    Click="Add_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
