<Window x:Class="ResumeHandlerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resume Helper"         
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#E5E5E5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button x:Name="AddTechnicalSkill" Content="Add Technical Skill" Click="AddTechnicalSkill_Click"/>
                <Button x:Name="SaveResume" Content="Save Resume" Click="SaveResume_Click"/>
            </ToolBar>
        </ToolBarTray>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Background="#E5E5E5">

            <Border Background="White"
                    Width="816"
                    Padding="30"
                    Margin="0,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">

                <FlowDocumentScrollViewer x:Name="DocViewer"
                                          IsToolBarVisible="False"
                                          VerticalScrollBarVisibility="Hidden"
                                          MinHeight="800"/>
            </Border>

        </ScrollViewer>
    </Grid>
</Window>
