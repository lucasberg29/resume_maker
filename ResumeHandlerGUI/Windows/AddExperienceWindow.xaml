<Window x:Class="ResumeHandlerGUI.AddExperienceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Experience"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="15">

        <TextBlock Text="Job Title" Margin="0,10,0,4"/>
        <TextBox x:Name="JobTitleTextBox" Width="220"/>
        
        <TextBlock Text="Company Name" Margin="0,0,0,4"/>
        <TextBox x:Name="CompanyNameTextBox" Width="220"/>

        <TextBlock Text="Company Website" Margin="0,0,0,4"/>
        <TextBox x:Name="CompanyWebsiteTextBox" Width="220"/>

        <TextBlock Text="Job Location" Margin="0,10,0,4"/>
        <TextBox x:Name="JobLocationTextBox" Width="220"/>

        <TextBlock Text="Start Date" Margin="0,10,0,4"/>
        <DatePicker x:Name="StartDatePicker" Width="220"/>

        <TextBlock Text="End Date" Margin="0,10,0,4"/>
        <DatePicker x:Name="EndDatePicker" Width="220"/>

        <TextBlock Text="Bullet Points" Margin="0,10,0,4"/>

        <ItemsControl x:Name="BulletPointsItemsControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="0,0,0,5">
                        <TextBox Width="200"
                         Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"/>

                        <Button Content="✕"
                        Margin="5,0,0,0"
                        Width="25"
                        Click="RemoveBullet_Click"/>
                    </DockPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Content="+ Add bullet"
        Width="100"
        Margin="0,5,0,0"
        Click="AddBullet_Click"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Cancel"
                    Width="70"
                    Margin="0,0,5,0"
                    Click="Cancel_Click"/>

            <Button Content="Add"
                    Width="70"
                    IsDefault="True"
                    Click="Add_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
