<Window x:Class="ResumeHandlerGUI.AddSocialMediaLinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ResumeHandlerGUI"
        Title="Add Social Media Link"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="15">
        <Button Content="Browse..."
                Width="80"
                HorizontalAlignment="Left"
                Click="BrowseFile_Click"/>
        <TextBox x:Name="BrowseFileTextBox" Width="220" Margin="0,10,0,4"/>

        <TextBlock Text="Hyperlink" Margin="0,0,0,4"/>
        <TextBox x:Name="HyperlinkTextBox" Width="220"/>

        <TextBlock Text="Name" Margin="0,0,0,4"/>
        <TextBox x:Name="NameTextBox" Width="220"/>

        <TextBlock Text="Alt" Margin="0,0,0,4"/>
        <TextBox x:Name="AltTextBox" Width="220"/>


        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Cancel"
                    Width="70"
                    Margin="0,0,5,0"
                    Click="Cancel_Click"/>

            <Button Content="Add"
                    Width="70"
                    IsDefault="True"
                    Click="Add_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
