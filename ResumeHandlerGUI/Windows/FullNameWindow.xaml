<Window x:Class="ResumeHandlerGUI.FullNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Full Name Editor"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="15">
        
        <TextBlock x:Name="CurrentFullNameTitle" Text="Current Full Name:" Margin="0,10,0,4"/>
        <TextBlock x:Name="CurrentFullName" Text="John Smith" Margin="0,0,0,4"/>

        <TextBlock x:Name="NewFullNameTitle" Text="New Full Name:" Margin="0,0,0,4"/>
        <TextBox x:Name="NewFullNameInputField" Width="220"/>
        
        <StackPanel x:Name="ButtonsPanel"
            Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="CancelButton" Content="Cancel"
                    Width="70"
                    Margin="5,5,0,0"
                    Click="Cancel_Click"></Button>
            <Button x:Name="UpdateButton" Content="Update"
        Width="70"
        Margin="5,5,0,0"
        Click="Update_Click"/>

        </StackPanel>




    </StackPanel>
</Window>
